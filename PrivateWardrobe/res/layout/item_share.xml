<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/item_share_user_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/item_share_user_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/item_share_user_img"
            android:text="Xlook"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_share_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="1分钟前"
            android:textColor="@color/gray_2"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_share_content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="这个搭配配色很赞啊，速度来点赞！！！"
        android:textColor="@color/grey_text" />

    <ImageView
        android:id="@+id/item_share_suit_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_launcher"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/item_share_suit_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="sesesfe"
        android:textColor="@color/grey_text"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_share_comment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="评论" />

        <TextView
            android:id="@+id/item_share_like_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="点赞" />

        <TextView
            android:id="@+id/item_share_collect_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="收藏" />
    </LinearLayout>

    <com.privatewardrobe.control.StaticListView
        android:id="@+id/item_share_comment_list"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:background="@color/gray_light" >
    </com.privatewardrobe.control.StaticListView>

</LinearLayout>