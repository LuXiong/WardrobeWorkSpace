<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/activity_create_suit_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/activity_create_suit_description_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="添加描述" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_create_suit_weather_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择季节" />

            <TextView
                android:id="@+id/activity_create_suit_weather_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="夏装" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_create_suit_occasion_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择场合" />

            <TextView
                android:id="@+id/activity_create_suit_occasion_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="约会" />
        </LinearLayout>

        <Button
            android:id="@+id/activity_create_suit_like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喜歡" />

        <GridView
            android:id="@+id/activity_create_suit_clothes_gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnWidth="60dp"
            android:horizontalSpacing="6dp"
            android:numColumns="auto_fit" >
        </GridView>
    </LinearLayout>

</RelativeLayout>