<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_login_background"
     >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dip"
         >

        <EditText
            android:id="@+id/activity_login_username_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_login_username_background"
            android:hint="username" 
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/activity_login_password_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@drawable/activity_login_password_bacground"
            android:hint="password"
            android:layout_gravity="center_horizontal"
            android:inputType="textPassword" />

        <LinearLayout
            android:id="@+id/activity_login_code_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip">

            <EditText
                android:id="@+id/activity_login_code_edit"
                android:layout_width="80dip"
                android:layout_height="30dip"
                android:background="@drawable/activity_login_getcode_background"
                />

            <TextView
                android:id="@+id/activity_login_getcode_btn"
                android:layout_width="80dip"
                android:layout_height="30dip"
                android:layout_marginLeft="20dip"
                android:gravity="fill_vertical"
                android:background="@drawable/activity_login_getcode_selector" 
                android:textColor="#ffffff"
                android:text="获取验证码"/>

        </LinearLayout>

        <Button
            android:id="@+id/activity_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:textColor="#ffffff"
            android:textSize="20dip"
            android:text="登 陆"
            android:background="@drawable/activity_login_btn_selector"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dip"
            android:layout_gravity="center_horizontal" >

            <TextView
                android:id="@+id/activity_login_regist_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="注册" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|" />

            <TextView
                android:id="@+id/activity_login_forget_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="忘记密码" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
