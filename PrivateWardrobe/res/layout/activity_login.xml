<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
     <ImageView 
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:src="@drawable/activity_login_background"
         android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/activity_login_username_background" >

                <EditText
                    android:id="@+id/activity_login_username_edit"
                    android:layout_width="300dp"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:hint="username" 
                    android:singleLine="true"
                    android:layout_marginLeft="20dip"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dip"
                    android:layout_gravity="center"
                    android:src="@drawable/activity_login_username_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="35dip" 
                android:background="@drawable/activity_login_password_bacground"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/activity_login_password_edit"
                    android:layout_width="300dp"
                    android:layout_height="50dip"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:singleLine="true" 
                    android:layout_marginLeft="20dip"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="25dip"
                    android:src="@drawable/activity_login_password_icon" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_login_code_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dip"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/activity_login_code_edit"
                android:layout_width="130dip"
                android:layout_height="40dip"
                android:background="@drawable/activity_login_getcode_background" />


            <TextView
                android:id="@+id/activity_login_getcode_btn"
                android:layout_width="130dip"
                android:layout_height="40dip"
                android:layout_marginLeft="30dip"
                android:background="@drawable/activity_login_getcode_selector"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:textSize="18dip" 
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/activity_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:background="@drawable/activity_login_btn_selector"
            android:text="登 陆"
            android:textColor="#ffffff"
            android:textSize="20dip"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/activity_login_regist_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="注册" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|" />

            <TextView
                android:id="@+id/activity_login_forget_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="忘记密码" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
