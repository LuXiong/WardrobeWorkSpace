<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/activity_login_username_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="手机号" />

        <EditText
            android:id="@+id/activity_login_password_edit"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:inputType="textPassword" />

        <LinearLayout
            android:id="@+id/activity_login_code_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/activity_login_code_edit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="验证码" />

            <Button
                android:id="@+id/activity_login_getcode_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码" />
        </LinearLayout>

        <Button
            android:id="@+id/activity_login_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="登陆" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/activity_login_regist_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="注册" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|" />

            <TextView
                android:id="@+id/activity_login_forget_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="忘记密码" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>